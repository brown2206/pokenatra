<h2>Edit Pokemon</h2>

<form action="/pokemon/<%= @pokemon.id %>" method="post">
  <input type="hidden" name="_method" value="put">

  <label for="pokemon[name]">Pokemon's Name:</label>
  <input name="pokemon[name]" value="<%= @pokemon.name %>">

  <label for="pokemon[poke_type]">Pokemon's Type:</label>
  <input name="pokemon[poke_type]" value="<%= @pokemon.poke_type %>">

  <label for="pokemon[cp]">Pokemon's CP:</label>
  <input name="pokemon[cp]" value="<%= @pokemon.cp %>">
  
  <input type="submit" value="Update">
</form>
